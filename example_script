NAMESPACE example

ALIAS negative_integer = -20
ALIAS positive_integer = 20
ALIAS string_alias = "Hello World"

FUNC setup {
    ; this is a comment
    `scoreboard objectives add example_vars`

    ; use a clock to schedule things running in a loop
    SET clock_max = 2000
    SET clock = clock_max
    SET clock_speed = 2
}

FUNC dosomething {
	`say #{string_alias}`
}

FUNC ontick {
	SET clock -= clock_speed

	UNLESS clock > 1 {
		SET clock = clock_max
		`say "Reset Clock"`
	}
	IF clock < 600 {
        CALL dosomething
    }
}
